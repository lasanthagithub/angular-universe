{
    "compileOnSave": false,
    "compilerOptions": {
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "stripInternal": true,
      "outDir": "./dist",
      // "rootDir": ".",
      "module": "es2015",
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "skipLibCheck": true,
      "types": [
        
      ],
      "baseUrl": ".",
      "paths": {
        "@angular/*": [
          "node_modules/@angular/*"
        ]
      }
    },
    "angularCompilerOptions": {
         "strictMetadataEmit": true,
         "skipTemplateCodegen": true,
        "flatModuleOutFile": "angular-universe.js",
        "flatModuleId": "angular-universe"
    },
    "files": [
      "./index.ts"
    ],
    "exclude": [
      "node_modules",
      "tmp"
    ]
  }
  